generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  createdAt DateTime @default(now())
  password String 
  blogs Blog[]
  comments Comment[]
  Like Like[]

  Bio Bio[]

  Intrests Intrests[]

  Follow Follow[]

  Bookmark Bookmark[]
}

model Blog{
  id Int @id @default(autoincrement())
  title String
  content String
  author User @relation(fields: [authorId] , references: [id])
  authorId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  isPublished Boolean @default(false)
  comments Comment[]

  Like Like[]

  BlogTags BlogTags[]

  Bookmark Bookmark[]
}

model Comment {
  id Int @id @default(autoincrement())
  content String
  user User @relation(fields: [userId] , references: [id])
  userId Int
  blog Blog @relation(fields: [blogId],references: [id])
  blogId Int
}

model Like {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId],references: [id])
  userId Int 
  blog Blog? @relation(fields: [blogId],references: [id])
  blogId Int
  createdAt DateTime @default(now())
}

model Bio {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId],references: [id])
  userId Int
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Intrests{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId],references: [id])
  userId Int
  title String
  createdAt DateTime @default(now())
}

model Follow {
  id Int @id @default(autoincrement())
  follower User @relation(fields: [followerId],references: [id])
  followerId Int
  createdAt DateTime @default(now())
}

model Tag {
  id Int @id @default(autoincrement())
  name String @unique
  tag BlogTags[]
}

model BlogTags {
  id Int @id @default(autoincrement())
  blog Blog @relation(fields: [blogId],references: [id])
  blogId Int
  tag Tag @relation(fields: [tagId],references: [id])
  tagId Int
}

model Bookmark {
  id       Int @id @default(autoincrement())
  user     User @relation(fields: [userId], references: [id])
  userId   Int
  blog     Blog @relation(fields: [blogId], references: [id])
  blogId   Int
  createdAt DateTime @default(now())
}